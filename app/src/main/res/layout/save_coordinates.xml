<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25315e"
    >

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/nazwaLayout"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="Wprowadz nazwę lokalizacji"
            android:id="@+id/nazwa_lokalizacji_text"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/save_coordinates_name"
            android:hint="nazwa lokalizacji"
            android:gravity="top"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:layout_below="@+id/nazwa_lokalizacji_text"
            android:textColorHint="#FFFFFF"
            android:alpha="0.3"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dlugoscLayout"
        android:layout_below="@+id/nazwaLayout"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="Wprowadź długość geograficzną lokalizacji "
            android:id="@+id/dlugosc_text"
            android:textSize="15dp"
            android:textColor="@android:color/white"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/save_coordinates_longitude"
            android:hint="długość geograficzna lokalizacji"
            android:gravity="top"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:layout_below="@+id/dlugosc_text"
            android:textColorHint="#FFFFFF"
            android:alpha="0.3"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/szerokoscLayout"
        android:layout_below="@+id/dlugoscLayout"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="Wprowadź szerokość geograficzną lokalizacji "
            android:textColor="@android:color/white"
            android:id="@+id/szerokosc_text"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/save_coordinates_latitude"
            android:hint="szerokość geograficzna lokalizacji"
            android:gravity="top"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:layout_below="@+id/szerokosc_text"
            android:textColorHint="#FFFFFF"
            android:alpha="0.3"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Dodaj"
            android:textColor="#fff"
            android:onClick="save_coordinates_add"
            android:background="@drawable/save_coordinates_add"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/save_coordinates_add" />
    </RelativeLayout>


</LinearLayout>